<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sudoku" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Uygulamanın ana rengi -->
        <item name="colorPrimary">@color/hardal</item>
        <!-- Uygulamanın toolbar ve statu bar arkaplan rengi -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- Uygulamanın genel arka plan rengi -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Uygulamanın yazı rengi -->
        <item name="android:textColor">@color/hardal</item>
        <!-- Butonların arkaplan rengi -->
        <item name="colorSecondary">@color/black</item>
        <!-- Butonların yazı rengi -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- CheckBox ve Switch rengi -->
        <item name="colorAccent">@color/hardal</item>
        <!-- Floating Action Button rengi -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- EditText çerçeve rengi -->
    </style>

    <style name="MyButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:strokeColor">@color/white</item>
    </style>

</resources>